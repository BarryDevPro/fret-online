{% extends 'base.html.twig' %}

{% block title 'Contact' %}
{% block slider '' %}
{% block body %}
<div class="contenair mt-5" style="margin-top: 300px;">
    <div class="row mt-5">
        <div  class="card col-md-10 offset-1 mt-4">

        </div>
    </div>
    {% if succes %}
        <div class="alert-success col-md-6 offset-1">
            Message envoyee
        </div>
    {% endif %}
    <div class="row mt-2">
        <div class="card col-md-10 offset-1 bg-transparent">
            <div class="card-title">Contactez-nous</div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 form-group">
                           {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-6 form-group">
                            {{ form_row(form.prenom) }}
                        </div>
                    </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-md-6 form-group">
                        {{ form_row(form.adresse) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="form-label">Votre Message</label>
                        {{ form_row(form.message, {'attr': {'class': 'form-control col-md-12'}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
