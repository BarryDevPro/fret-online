{% extends 'base.html.twig' %}

{% block title 'Login' %}

{% block slider '' %}

{% block body %}
        <div class="container">
            <div class="col-md-1" style="margin-top: 80px;">
                <h4>Login</h4>
                <div class="progress mb-2">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="50"
                         aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    <div class="container" style="margin-top: 40px; margin-bottom: 80px;">
        <div class="offset-md-3 col-md-6 mt-1 mb-4">
            <div class="card">
                <div class="card-header text-center text-primary">
                    <h3>SE CONNECTER</h3>
                </div>
                {% if error %}
                    <div class="alert alert-danger text-center">
                       <p>identifiant ou mot de passe invalide</p>
                    </div>
                {% endif %}
                <div class="card-body">
                    <form action="{{ path('login') }}" class="form-group" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="_username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="_password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-secondary btn-labeled pull-left">
                                <a class="text-decoration-none text-white" href="{{ path('create_compte') }}">Créer un compte &nbsp;&nbsp;<span class="btn-label btn-label-left"><i class="fa fa-user-o"></i></span></a>
                            </button>
                            <button type="submit" class="btn btn-primary btn-labeled pull-right">Se connecter &nbsp;&nbsp;<span class="btn-label btn-label-right"><i class="fa fa-check"></i></span></button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="alert-danger text-center mt-1">
                <a href="{{ path('create_compte') }}" style="text-decoration: none;color: black;"><span style="color: #2C3E50;size: 14px;">créér un compte</span> en moins d'une minute !</a>
            </div>

        </div>
    </div>
{% endblock %}