{% extends 'base.html.twig' %}

{% block title 'creation abonné' %}
{% block slider '' %}
{% block body %}
    <div class="jumbotron">
        <div class="col-md-2 mt-4">
            <h3>Frêt en direct</h3>
            <div class="progress mb-4">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="50"
                     aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="container">
            <div class="card offset-md-1 col-md-10 mt-3" style="margin-bottom: 40px;">
                {{ form_start(form) }}
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="">Localité</label>
                        <div>{{ form_widget(form.localite) }}</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Type Vehicule</label>
                        <div>{{ form_errors(form.typeVehicule) }}</div>
                        <div>{{ form_widget(form.typeVehicule) }}</div>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Quantité minimum</label>
                        <div>{{ form_errors(form.tonnage) }}</div>
                        <div>{{ form_widget(form.tonnage) }}</div>
                    </div>
                    <div class="form-group col-md-3 text-center">
                        <button type="submit" class="btn btn-primary mt-4">Search</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

            <div class="card offset-1 col-md-10">
                <table class="table table-striped">
                    {% for voyage in voyages %}
                        <tr>
                            <td>{{ voyage.idVehicule.matricule}}</td>
                            <td>{{ voyage.}}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}