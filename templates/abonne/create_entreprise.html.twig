{% extends 'base.html.twig' %}

{% block title 'creation abonné' %}
{% block slider '' %}
{% block body %}
    <div class="jumbotron">
        <div class="col-md-3 mt-4">
            <h4>Ajouter votre Entreprise</h4>
            <div class="progress mb-4">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="50"
                     aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                {% for message in app.flashes('success') %}
                    <div class="offset-md-3 col-md-6 text-center">
                        <p class="alert alert-success">{{ message }}</p>
                    </div>
                {% endfor %}
            </div>
            <div class="card offset-md-1 col-md-10 mt-3" style="margin-bottom: 40px;">
                {{ form_start(form) }}
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="">Nom</label>
                        <div>{{ form_errors(form.nom) }}</div>
                        <div>{{ form_widget(form.nom) }}</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Ninea</label>
                        <div>{{ form_errors(form.ninea) }}</div>
                        <div>{{ form_widget(form.ninea) }}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="">Ville</label>
                        <div>{{ form_errors(form.ville) }}</div>
                        <div>{{ form_widget(form.ville) }}</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Adresse</label>
                        <div>{{ form_errors(form.adresse) }}</div>
                        <div>{{ form_widget(form.adresse) }}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="">Telephone</label>
                        {% if sub_error['tel'] != "" %}
                            <div class="small text-danger">
                            <span class="bg-danger text-white font-weight-bold" style=";border-radius: 5px;">
                            ERREUR</span> Cet numero est incorrect ou existe dejà.
                            </div>
                        {% endif %}
                        <div>{{ form_widget(form.tel) }}</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Logo</label>
                        {% if sub_error['logo'] != "" %}
                            <div class="small text-danger">
                            <span class="bg-danger text-white font-weight-bold" style=";border-radius: 5px;">
                            ERREUR</span> Cet format n'est pris en charge
                            </div>
                        {% endif %}
                        <div>{{ form_widget(form.imageLogo) }}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="">Compagnie Assurance</label>
                        <div>{{ form_errors(form.compagnieAssurance) }}</div>
                        <div>{{ form_widget(form.compagnieAssurance) }}</div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Zones Interventions</label>
                            <select name="zone[]" id="" aria-multiselectable="true" class="form-control" multiple="multiple">
                                {% for zone in zones %}
                                    <option value="{{ zone.id}}">{{ zone.nomZone }}</option>
                                {% endfor %}
                            </select>
                    </div>
                </div>
                <div class="row">
                    {{ form_rest(form) }}
                       <div class="offset-md-4 col-md-4">
                           <button type="submit" class="btn btn-primary btn-labeled pull-right">Valider&nbsp;<span
                                       class="btn-label btn-label-right"><i class="fa fa-check"></i></span></button>
                           <button type=""  class="btn btn-primary btn-labeled pull-left">
                               <a class="text-decoration-none" href="{{ path('user_espace') }}">Ignorer&nbsp;</a><span
                                       class="btn-label btn-label-right"><i class="fa fa-close"></i></span></button>
                       </div>
                </div>
                <p class="small text-danger mt-4"  style="margin-bottom: 50px;"><i class="fa fa-hand-o-right"></i>  Si vous travaillez pour votre propre compte vous pouvez ignorer.</p>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}