{% extends 'base.html.twig' %}

{% block title 'creation abonn√©' %}
{% block slider '' %}
{% block body %}
    <div class="jumbotron">
        <div class="col-md-4 mt-4">
            <h3>Modification de compte</h3>
            <div class="progress mb-4">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="50"
                     aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="container">
            <div class="card offset-md-1 col-md-10 mt-3" style="margin-bottom: 40px;">
                {{ form_start(form) }}
                <div class="mt-3 " >{{ form_row(form.nom) }}</div>
                <div class=" ">{{ form_row(form.prenom) }}</div>
                <div class=" ">{{ form_row(form.ninea) }}</div>
                <div class=" ">{{ form_row(form.typeAbonne) }}</div>

                <div class=" ">{{ form_row(form.telephone) }}</div>
                <div class=" ">{{ form_row(form.email) }}</div>

                <div class=" ">
                    {{ form_row(form.imageProfil) }}
                </div>
                <div class=" ">{{ form_row(form.password) }}</div>
                <div class="" style="margin-bottom: 100px;">
                    {{ form_rest(form) }}
                    <button type="submit" class="btn btn-primary btn-labeled pull-right">Valider&nbsp;<span
                                class="btn-label btn-label-right"><i class="fa fa-check"></i></span></button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}