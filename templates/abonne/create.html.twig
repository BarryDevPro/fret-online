{% extends 'base.html.twig' %}

{% block title 'creation abonné' %}
{% block slider '' %}
{% block body %}
    <div class="jumbotron">
    <div class="col-md-3 mt-4">
        <h3>Création de compte</h3>
        <div class="progress mb-4">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="50"
                 aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
    <div class="container">
        <div class="card offset-md-1 col-md-10 mt-3" style="margin-bottom: 40px;">
            {{ form_start(form) }}
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="">Nom</label>
                    <div>{{ form_errors(form.nom) }}</div>
                    <div>{{ form_widget(form.nom) }}</div>
                </div>
                <div class="form-group col-md-6">
                    <label for="">Prenom</label>
                    <div>{{ form_errors(form.prenom) }}</div>
                    <div>{{ form_widget(form.prenom) }}</div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="">Ninea</label>
                    {% if sub_error['ninea'] != "" %}
                        <div class="small text-danger">
                            <span class="bg-danger text-white font-weight-bold" style=";border-radius: 5px;">
                            ERREUR</span> Ce ninea existe dejà.
                        </div>
                    {% endif %}
                    <div>{{ form_widget(form.ninea) }}</div>
                </div>
                <div class="form-group col-md-6">
                    <label for="typeAbonne">Type de Compte</label>
                    <div>{{ form_errors(form.typeAbonne) }}</div>
                    <div>{{ form_widget(form.typeAbonne) }}</div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Email">Email</label>
                    {% if sub_error['email'] != "" %}
                        <div class="small text-danger">
                            <span class="bg-danger text-white font-weight-bold" style=";border-radius: 5px;">
                            ERREUR</span> Cet émail existe dejà.
                        </div>
                    {% endif %}
                    <div>{{ form_widget(form.email) }}</div>
                </div>
                <div class="form-group col-md-6">
                    <label for="tel">Téléphone</label>
                    {% if sub_error['tel'] != "" %}
                        <div class="small text-danger">
                            <span class="bg-danger text-white font-weight-bold" style=";border-radius: 5px;">
                            ERREUR</span> Ce format est incorrect ou existe dejà.
                        </div>
                    {% endif %}
                    <div>{{ form_widget(form.telephone) }}</div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="">Photo</label>
                    {% if sub_error['image'] != "" %}
                        <div class="small text-danger">
                            <span class="bg-danger text-white font-weight-bold" style=";border-radius: 5px;">
                            ERREUR</span> désole ce format n'est pas pris en charge.
                        </div>
                    {% endif %}
                    <div>{{ form_widget(form.imageProfil) }}</div>
                </div>
                <div class="form-group col-md-6">
                    <label for="Password">Mot de passe</label>
                    <div>{{ form_errors(form.password) }}</div>
                    <div>{{ form_widget(form.password) }}</div>
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 100px;">
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary btn-labeled pull-right">Valider&nbsp;<span
                            class="btn-label btn-label-right"><i class="fa fa-check"></i></span></button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}